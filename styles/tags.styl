div
    &.ReactTags__tags
        position relative
    &.ReactTags__tagInput
        width 200px
        border-radius 2px
        display inline-block
    &.ReactTags__selected
        float left
        span
            &.ReactTags__tag
                border 1px solid #eee
                background #eee
                font-size 12px
                display inline-block
                padding .5rem .75rem
                margin 0 5px
                cursor pointer
                transition all 0.3s ease-in-out

                &:hover
                    border 1px solid hsla(4, 90%, 58%, 0.24)
                    background hsla(4, 90%, 58%, 0.24)
        a
            &.ReactTags__remove
                color #aaa
                margin-left 5px
                cursor pointer
    &.ReactTags__suggestions
        position absolute
        ul
            padding 0
            list-style-type none
            box-shadow .05em .01em .5em rgba(0,0,0,.2)
            background white
            width 200px
            li
                &.active
                    background #b7cfe0
                    cursor pointer
        li
            border-bottom 1px solid #ddd
            padding 5px 10px
            margin 0
            mark
                text-decoration underline
                background none
                font-weight 600

div.ReactTags__tagInput input,div.ReactTags__tagInput input:focus
    margin 0
    padding .5rem .75rem
    font-size 12px
    width 100%
    border 1px solid #eee
    transition all 0.3s ease-in-out

div.ReactTags__tagInput input:focus
    border 1px solid hsla(4, 90%, 58%, 0.24)